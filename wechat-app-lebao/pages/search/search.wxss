/* pages/search/search.wxss */

.content {
  width: 100%;
  background-color: #fff;
  padding: 20px 0;
}

.search {
  width: 90%;
  height: 30px;
  margin-left: 5%;
  margin-top: 12px;
  border-radius: 10px;
  background: #fbfafa;
  box-shadow: 2px 2px 4px rgba(131, 131, 131, 0.2);
}

.icon-search {
  padding-left: 20px;
  padding-right: 10px;
  line-height: 30px;
  color: #466466;
  font-size: 18px;
  float: left;
}

.icon-close {
  padding: 0px 8px;
  line-height: 30px;
  color: #466466;
  font-size: 20px;
  float: right;
}

.search-input {
  width: calc(100% - 140px);
  height: 100%;
  background: transparent;
  color: #466466;
  font-size: 14px;
  float: left;
}

.search-text {
  background-color: #25aab1;
  color: #fff;
  width: 50px;
  height: 100%;
  line-height: 30px;
  float: right;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  text-align: center;
  font-size: 14px;
}

.schoollist {
  width: 90%;
  height: calc(100% - 40px);
  margin-left: 5%;
  padding-top: 16px;
}
.title{
  width: 100%;
  height: 30px;
}
.title-text{
  width: 100px;
  height: 100%;
  color: #466466;
  font-weight: 500;
  line-height: 30px;
  font-size: 12px;
  float: left;
}
.delete{
  width: calc(100% - 100px);
  height: 100%;
  float: right;
  text-align: right;
}
.icon-garbage{
  font-size: 16px;
  color: #466466;
  line-height: 30px;
  padding-right: 8px;
}
.history-list{
  width: 100%;
  height: calc(100% - 50px);
  padding-top: 12px;
  display: flex;
  flex-wrap: wrap;
}
.history-item{
  background-color: #f6f6f6;
  color: #466466;
  font-size: 10px;
  padding: 4px 8px;
  margin-left: 10px;
  letter-spacing: 3px;
  border-radius: 15px;
}
.school {
  width: 100%;
  height: 90px;
  border-style: none none solid none;
  border-width: 1px;
  border-color: #e9e9e9;
}

.school-i5 {
  height: 70px;
}

.school:last-child {
  border: none;
}

.school-pic {
  width: 30%;
  height: 80%;
  margin-top: 3%;
  float: left;
}

.school-name {
  line-height: 90px;
  padding-left: 12px;
  font-size: 14px;
  color: #466466;
}

.notfound {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.icon-notfound {
  color: #466466;
  font-size: 80px;
}

.notfound-text {
  color: #466466;
  font-size: 16px;
}

