@import'../../video/video.wxss';
@import'../../questionBank/challenge/challenge.wxss';
.gui-title{
  height:40px;
  line-height: 20px;
  background-color: #25aab1;
  color:#fff;
  padding:5px;
  font-size:17px;
}
.gui-con{
  margin:10px;
  
}
.gui-banner{
border-bottom: 1px #eee solid;
}
.test-main-scroll{
  position:relative;
}
.con-hide{
  display:none;
}
.con-show{
  display:block;
}
.test-question{
  padding:19px 30px;
border-bottom:1px dashed #F5F5F5;
font-size:16px;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(77,77,77,1);
line-height:22px
}
.test-tips{
font-size:18px;
margin:10px 0;
}
.test-tips-label{
color:#466466;
margin: 15px 0;
}
.test-tips-con{
color:#808080;
line-height: 25px;
}
.test-next{
  width:100%;
  height:50px;
  text-align: center;
  margin-top:20px;
}
.test-next-btn{
  width:120px;
  height:33px;
  line-height: 33px;
  background-color:#25aab1;
  color:#fff;
  border-radius: 20px;
  display: inline-block;
  font-size:16px;
  text-align: center;
}
.fillblank-label{
  margin:10px 20px;
  font-size:18px;
  color:#466466;
}
.textarea{
  border:1px #eee solid;
  margin:10px 0;
  padding:10px;
  width:calc(100% - 22px);
}
.test-video-con{
  margin:10px 0;

}
.test-video{
  width:60vw;
  height:40vw;
}
.addvideo{
  width:100px;
  height:100px;
}
.icon-del{
  position:absolute;
  margin-left:-22px;
  color:rgba(100, 100, 100, 0.7);
  font-size:22px;
}
.icon-videodel{
  position:absolute;
  margin-left:-22px;
  color:rgba(216, 216, 216, 0.8);
  font-size:22px;
}

.test-image-con{
  margin:10px 0;
  display:flex;
  flex-wrap: wrap;
}
.test-image{
  width:30vw;
  height:30vw;
  margin-right:3px;
}