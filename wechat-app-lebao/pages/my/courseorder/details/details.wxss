/* pages/my/order/details/details.wxss */
@import '../../../createOrder/create.wxss';
@import '/css/modal.wxss';

page {
  background-color: #fff;
}

.blank {
  width: 100%;
  height: 16px;
}
.title{
  display:flex;
  justify-content:space-around;
  padding:0 20px;

}
.course-name{
  font-size:22px;
  font-weight:bold;
  color:#25aab1;
  margin-top:8px;

}
.status {
  width: calc(100% - 20px);
  height: 24px;
  text-align: right;
  color: #25aab1;
  font-size: 14px;
}
.imgsrc {
  display:flex;
  height: 25%;
  justify-content: center;
  align-items:center;
  padding: 10px 20px;

}
.img{
  height:177px;
}


.orderprice {
  width: calc(100% - 16px);
  height: 30px;
  padding-right: 16px;
  font-size: 19px;
  color: #25aab1;
  line-height: 30px;
  text-align: right;
}

.message {
  width: calc(100% - 8px);
  margin-left: 8px;
  line-height: 22px;


}
.desc{
  border-bottom:1px #eee solid;
}
.blank {
  height: 20px;
}

.icon-address {
  font-size: 16px;
  margin-left: -16px;
}

.order-event {
  width: 100%;
  height: 30px;
  margin-top:10px;
}

.order-btn {
  width: 74px;
  height: 30px;
  border-radius: 10px;
  font-size: 14px;
  line-height: 30px;
  border: 0.5px #25aab1 solid;
  margin-right: 14px;
  float: right;
  color: #25aab1;
  text-align: center;
}

.first-import {
  color: #fff;
  background-color: #25aab1;
}

.didabled {
  color: #bbbec4;
  border: 0.5px #bbbec4 solid;
}

.single {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
