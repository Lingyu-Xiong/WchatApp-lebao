@import'../../video/video.wxss';
@import'../order/order.wxss';
.item-list{
  width:25%;
}
.gborder{
  margin:10px calc((100% - 160px) / 2);
}
.gborder-single{
  padding:15px 15px 10px 15px;
  border-bottom:3px #eee solid;
}
.gborder-info{
  display:flex;
}
.gborder-logo-box{
  flex-basis: 40vw;
  height:25vw;
}
.gborder-logo{
   width:100%;
  height:25vw;
}
.gborder-right{
   flex-basis: 50vw;
  height:25vw;
padding-left:10px;
background-color:#FAFAFA;
}
.actname{
  font-size:17px;
  color:#466466;
}
.act-price{
  display:flex;
  font-size:16px;
  margin-top:5vw;
}
.originalPrice {
  color: #c5c5c5;
  font-size: 16px;
  text-decoration: line-through;
}

.discountPrice {
  color: #e7010d;
  font-size: 16px;
}
.buy-price{
  font-size:17px;
  text-align: right;
  padding:10px 0;
  border-bottom: 1px #eee solid;
  color:#4d4d4d;
}
.status-btn-0{
   width:90px;
  height:22px;
  background-color:#fff;
  font-size:14px;
  line-height: 22px;
  color:#b6b6b6;
  text-align: center;
  margin:15px 0 0 calc(100% - 90px);
}
.status-btn-1{
   width:90px;
  height:22px;
  background-color:#fff;
  border-radius: 15px;
  border:1px #25aab1 solid;
  font-size:14px;
  line-height: 22px;
  color:#25aab1;
  text-align: center;
  margin:15px 0 0 calc(100% - 90px);
}
.status-btn-2{
   width:90px;
  height:22px;
  background-color:#fff;
  border-radius: 15px;
  border:1px #b6b6b6 solid;
  font-size:14px;
  line-height: 22px;
  color:#b6b6b6;
  text-align: center;
  margin:15px 0 0 calc(100% - 90px);
}
.status-btn-3{
   width:120px;
  height:22px;
  background-color:#fff;
  border-radius: 15px;
  border:1px #FB4E4E solid;
  font-size:14px;
  line-height: 22px;
  color:#FB4E4E;
  text-align: center;
  margin:15px 0 0 calc(100% - 120px);
}
.nodata{
  font-size:16px;
  color:#466466;
  text-align: center;
  margin-top:200px;
}
