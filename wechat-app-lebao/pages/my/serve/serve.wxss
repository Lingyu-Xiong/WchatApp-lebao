page{
  height:100%;
  background-color: #fff;
}
.vol-con{
font-size:16px;
height:100%
}
/* 查询 */
.select {
  margin-top: 12px;
  width: 100%;
  height: 25px;
}

.select-time {
  width: 30%;
  height: 100%;
  font-size: 13px;
  float: left;
  margin-left: 5%;
}


.serve-select {
  width: 90%;
  height: 30px;
  color: #466466;
  font-size: 10px;
  padding-left: 12px;
  line-height: 24px;
  float: left;
  border: 0.5px #e9e9e9 solid;
  border-radius: 10rpx;
  margin-left: 3%;
  min-height: 25px;
}

.icon-search {
  padding-left: 5px;
  padding-right: 10px;
  line-height: 30px;
  color: #466466;
  font-size: 18px;
  float: left;
}

.serve-select .selinput {
  /*width: calc(100% - 40rpx);*/
  width:80%;
  margin-top:1%;
  float: left;
  font-size:14px;

}

.icon-close {
  width: 30rpx;
  font-size: 30rpx;
  color: #466466;
  text-align: center;
  float: right;
  line-height: 24px;
  margin:0 5px;
}

.place-holder {
  color: #e6e6e6;
  font-size: 14px;
  line-height: 24px;
}

.select-btn {
  width: 56px;
  height: 100%;
  background-color: #25aab1;
  text-align: center;
  letter-spacing: 2px;
  color: #fff;
  line-height: 24px;
  margin-right: 16px;
  margin-top: 1px;
  float: right;
  font-size: 12px;
}
/* 活动列表 */
.vol-rec{
  text-align: right;
  color:#466466;
   border-bottom:1px #eee solid;
   padding:5px;
}
.single-list{
  border-bottom:1px #eee solid;
  padding:10px;
  display:flex;
}
.list-left{
flex-basis:70%;
}
.list-right{
  flex-basis: 30%;
}
.distance{
  color:#a2a2a2;
  font-size:12px;
  height:10px;
  float:right;
  position:relative;
  bottom:25px;
}
.title{
  display: inline-block;
  width:100%;
  color:#a2a2a2;
  height:30px;
  line-height: 30px;
  margin:0;
}

.schoolname{
  color:#466466;
  margin:0;
}
.sign-btn{
  width:50px;
  height:30px;
  background-color:#25aab1;
  color:#fff;
  line-height:30px;
  text-align: center;
  border-radius: 5px;
  position:relative;
  float:right;
}
text{
  position:relative;
  float:right;
  color:#a2a2a2;
  height:30px;
  line-height: 30px;
}
.no-data {
  width: 100%;
  height: 500px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.icon-no-record, .icon-notfound {
  color: #466466;
  font-size: 70px;
  line-height: 90px;
}

.no-data-text {
  color: #466466;
  font-size: 16px;
  line-height: 20px;
}
