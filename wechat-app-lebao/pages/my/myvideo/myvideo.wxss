@import'../../video/video.wxss';
.video-title{
  justify-content: space-between
}
.myvideo-update-time{
  color:#466466;
  font-size:16px;
}
.myvideo-mask{
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 100;
}
.invisible_model{
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  bottom: 0;
}
.push-select{
  font-size:16px;
  color:#222;
  background-color: #fff;
  width:300px;
  height:105px;
  border-radius: 10px;
  position:fixed;
  top:180px;
  right:calc(50% - 150px);
  z-index:1;
  line-height: 22px;

}
.select-single{
    padding:16px;
    height:20px;
}
.push-select .local{
  border-bottom: 1px #eee solid;
}
.no-data {
  width: 100%;
  height: 100%;
  margin-top:40%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.icon-no-record, .icon-notfound {
  color: #466466;
  font-size: 70px;
  line-height: 90px;
}

.no-data-text {
  color: #466466;
  font-size: 16px;
  line-height: 20px;
}