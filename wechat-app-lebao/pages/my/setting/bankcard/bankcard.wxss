/* pages/my/setting/bankcard/bankcard.wxss */
@import "../../person.wxss";
page{
  background-color: #ffffff;
}
.content{
  width: 100%;
  margin: 0;
}
.description{
  padding: 20px;
}
.addcard {
  float: right;
  width: 50px;
  color: #466466;
  font-size: 12px;
  text-align: center;
  line-height: 20px;
}

.icon-add {
  font-size: 14px;
  position: relative;
  margin-top: -5px;
}

.list {
  height: calc(100% - 72px);
  width: 100%;
  border: none;
}

.card {
  width: calc(100% - 2px);
  height: 80px;
  border: 0.5px #e9e9e9 solid;
  border-radius: 10px;
  background-color: #fff;
  margin-top: 12px;
}

.card-i5 {
  height: 65px;
}

.card-detail {
  width: 80%;
  float: left;
  height: 100%;
}

.card-default {
  width: 20%;
  height: 100%;
  float: right;
  text-align: left;
  color: #25aab1;
  font-size: 13px;
  line-height: 80px;
}

.card-default-i5 {
  line-height: 65px;
}

.bank-text {
  color: #466466;
  font-size: 16px;
  line-height: 40px;
}

.bank-text-i5 {
  font-size: 14px;
}

.bank-type {
  color: #839d9e;
  font-size: 13px;
  padding-left: 40px;
  margin-top: 8px;
}

.bank-type-i5 {
  margin-top: 0;
}

.no-data {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.icon-no-record, .icon-notfound {
  color: #466466;
  font-size: 70px;
  line-height: 90px;
}

.no-data-text {
  color: #466466;
  font-size: 16px;
  line-height: 20px;
}