/* pages/my/setting/setting.wxss */
@import "../person.wxss";

page {
  background-color: #fff;
}

.single-list text {
  padding-left: 14px;
}

.content {
  width: 96%;
  margin: 2%;
}

.detail {
  float: right;
  margin-right: 12px;
}

.logout {
  background-color: #fff;
  border: 1px solid #25aab1;
  color: #25aab1;
  font-size: 16px;
}

.logout::after {
  border: none;
}

.blank {
  height: 20px;
}

.form-item {
  width: 100%;
  height: 40px;
  margin-top: 12px;
  color: #466466;
}

.form-item:first-child {
  margin: 0;
}

.desc {
  width: calc(28% - 16px);
  height: 100%;
  text-align: right;
  line-height: 40px;
  padding-right: 12px;
  float: left;
  font-size: 14px;
}

.desc-i5 {
  width: calc(30% - 16px);
}

.box {
  width: calc(72% - 2px);
  height: 100%;
  float: left;
}

.box-i5 {
  width: calc(70% - 48px);
}

.input {
  width: calc(72% - 18px);
  border: 1rpx #f8f8f8 solid;
  padding-left: 16px;
  border-radius: 5px;
  color: #466466;
  font-size: 13px;
  background-color: #f8f8f8;
}

.input-i5 {
  width: calc(70% - 18px);
}

.place-holder {
  color: #e9e9e9;
  font-size: 13px;
  line-height: 40px;
}
.in-reddot{
  top:0
}