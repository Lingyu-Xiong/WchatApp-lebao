/* pages/homepage/homepage.wxss */

.block {
  margin-top: 0.5px;
}

.banner-pic {
  width: 100%;
  height: 100%;
}

.item-list {
  display: flex;
  flex-wrap: wrap;
  padding:15px 0;
}

.function {
  width: 20%;
  height: 80px;
}

.item-pic {
  width: 80%;
  height: 80%;
  margin-left: 10%;
  margin-top: 10%;
}

.item-text {
  display: block;
  text-align: center;
  font-size: 13px;
  color: #466466;
  margin-top:-10px;
}

.banner {
  display: inline-block;
}

.banner-line {
  float: left;
}

.more {
  float: right;
  width: 60px;
  color: #869c9f;
  line-height: 40px;
  text-align: left;
  font-size: 12px;
}

.icon-go {
  color: #869c9f;
  line-height: 40px;
  font-size: 10px;
  padding-left: 8px;
}

.school-list {
  display: flex;
  flex-wrap: wrap;
}

.school {
  width: 50%;
  height: 140px;
  text-align: center;
  color: #466466;
}

.school-i5 {
  height: 130px;
}

.school text {
  display: block;
}

.school-pic {
  width: 60%;
  height: 50%;
  margin-top: 5%;
}

.school-name {
  font-size: 12px;
  padding: 0px 4px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: calc(100% - 8px);
}

.school-place {
  font-size: 9px;
  margin-top: 4px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0px 4px;
  width: calc(100% - 8px);
}

.blank {
  width: 100%;
  height: 8px;
}
/* 热门活动 */
.hot-box{
  
}
.hot-banner{
  padding:15px 20px 20px 15px;
  color:#466466;
}
.hot-content{
  padding:0 10px;
 display: flex;
  flex-wrap: wrap;
}
.hot-single{
   width: 46%;
  height: 150px;
  margin:0 2% 10px 2%;
}
.hot-item-pic{
 width: 100%;
  height: 69%;
  margin-left: 0;

}
.hot-text{
 display: block;
  text-align: center;
  font-size: 17px;
  color: #466466;
  width: 99%;
  height:40px;
  line-height:40px;
  border-style: none solid solid solid;
  border-width: 1px;
  border-color: #eee;
  border-bottom-left-radius:5px;
  border-bottom-right-radius:5px;
  margin-top:-5px;
}
/* 新闻 */
.news-box{
  display: flex;
  flex-direction: row;
}
.toutiao{
  width:20%;
  height:50px;
  margin-top:10px;
}
.newsswiper{
  flex-basis: 80%;
  height:60px;
  padding:8px 8px 8px 0;
}
.news-list{
  display: flex;
  flex-direction: column;
  margin-left:10px;
}
.news-single{
font-size:15px;
color:#466466;
overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}