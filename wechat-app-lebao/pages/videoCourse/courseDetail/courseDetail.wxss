/* pages/videoCourse/courseDetail/courseDetail.wxss */
page{
  height:100%;
  width: 100%;
  background-color: #fff;
}
.imgsrc {
  display:flex;
  height: 25%;
  justify-content: center;
  align-items:center;

}
.img{
  width: 100%;
  height:177px;
}
.course-info{
  display: flex;
  justify-content: center;
  flex-direction: row;
  height: 120px;
  border-bottom:10px solid #F5F5F5;
}
.left{
  width: 70%;
  padding-top:10px;
  display: flex;
  flex-direction: column;

}
.course-name{
  /*padding: 5px 0 5px 20px;*/
  height: 30px;
  color: #0F2E48;
}
.course-intro{
  padding: 0 10px 0 40px;
  font-size:14px;
  height: 50px;
  overflow:hidden;
  text-overflow:ellipsis;
  /*white-space:nowrap;*/   
  display:-webkit-box; 
  word-break: break-all;
  -webkit-box-orient:vertical; 
  -webkit-line-clamp:2; 
  color: #232323; 
}
.course-num{
  padding-left: 20px;
  color:rgba(138,138,138,1);
  line-height:20px
}
.right{
  width:20%;
}
.right image{
  padding:20px 0;
  width:60px;
  height:60px;

}
/*tabbar*/
.tabbar{
  width: 100%;
  line-height:40px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: center;
  color: #8A8A8A;
  border-bottom:1px solid #F5F5F5;
}
.active {
  background-color: #fff;
  color: #0F2E48;
  border-style: none none solid none;
  border-width: 2px;
  border-color: #0F2E48;
}
.detail-list{

}
.detail-single{
  width:100%;
  height:80px;
  display:flex;
  /*justify-content:space-around;*/
  align-items:center;
  justify-content: space-around;
}
.detail-left{
  width: 70%;
}
.detail-name{
  color: #0F2E48;
}
.detail-right{
  width: 20%;
}
.button{
  width:60px;
  background:rgba(62,191,183,1);
  box-shadow:0px 2px 5px 0px rgba(62,191,183,0.45);
  border-radius:5px;
  text-align:center;
  line-height:20px;
  color:#fff;
  font-size:12px;

}
.rich-text{
  padding: 20px;
}
.kefu {
  background: transparent;
  outline: none;
  border: none;
  padding: 0;
  line-height: 1.6em;
  font-size: 12px;
}
.kefu button{
  
}
button::after{ border: none; }
.sign-up-blank {
  background-color: transparent;
  width: 100%;
  height: 68px;
}

.sign-up {
  width: 100%;
  height: 58px;
  border-style: solid none none none;
  border-width: 0.5px;
  border-color: #e9e9e9;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  display: flex;
}

.sign-up .left {
  width: calc(100% - 100px);
  height: 100%;
}

.sign-up .right {
  width: 100px;
  height: 100%;
  line-height: 48px;
  font-size: 16px;
  font-weight: bold;
  letter-spacing: 8px;
  color: #fff;
  text-align: center;
  background-color: #25aab1;
}

.total {
  color: #466466;
  font-size: 12px;
  padding-left: 12px;
  margin-top: 4px;
}

.total text {
  color: #25aab1;
  font-size: 20px;
}

.personNum {
  color: #466466;
  font-size: 10px;
  padding-left: 12px;
}