/* pages/videoCourse/videoCourse.wxss */
page{
  height:100%;
  background-color: #fff;
}
.content{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.header{
  line-height: 100rpx;
  flex: 0 0 75px; /* 不放大不缩小固定100rpx */
}
/* 查询 */
.courseselect {
  position:fixed;
  top:0;
  width: 100%;
  height: 35px;
  display:flex;
}

.select-time {
  width: 30%;
  height: 100%;
  font-size: 13px;
  float: left;
  margin-left: 5%;
}


.course-select {
  width: 100%;
  height: 30px;
  color: #466466;
  font-size: 10px;
  line-height: 24px;
  border: 0.5px #e9e9e9 solid;
  border-radius: 10rpx;
  margin: 0 3%;
  display:flex;
  flex-wrap: nowrap

}

.icon-search {
  margin:0 5px;
  height:30px;
  line-height: 30px;
  color: #466466;
  font-size: 18px;
  flex-basis: 20px;
}

.course-select .selinput {
  width: calc(100% - 55px);
  font-size:14px;
  height:30px;
  line-height: 30px;
}

.icon-close {
  flex-basis: 15px;
  font-size: 15px;
  color: #466466;
  height:30px;
  line-height: 30px;
  margin:0 5px;
}

.place-holder {
  color: #e6e6e6;
  font-size: 14px;
  line-height: 24px;
}

.select-btn {
  width: 56px;
  height: 100%;
  background-color: #25aab1;
  text-align: center;
  letter-spacing: 2px;
  color: #fff;
  line-height: 24px;
  margin-right: 16px;
  margin-top: 1px;
  float: right;
  font-size: 12px;
}
/* 查询end */
.main{
  flex: 1;
  position: relative;
}
.scroll{
  width:100%;
  height:40px;
  white-space: nowrap; 
  display: flex;
  position:fixed;
  top:30px;
}
.item-card{
  margin-left: 20px;
  margin-right: 20px;
  display: inline-block;
  font-size:15px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#8A8A8A;
  line-height:21px;
}
.active {
  background-color: #fff;
  color: #21354F;
  border-style: none none solid none;
  border-width: 2px;
  border-color: #3EBFB7;
}
/* 广告 */
.block {
  margin: 0 15px;
}

.banner-pic {
  width: 100%;
  height: 100%;
}
/* 广告end */
/* 课程*/
.title{
  padding: 10px 0 10px 20px;
  font-size:20px;
}
.main{
  flex: 1;
  position: relative;
}
.main-scroll{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.course-list{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content:center;

}
.course-single{
  width: 90%;
  height:170px;
  border-radius: 8px;
  box-shadow:0px 0px 20px 5px rgba(0,0,0,0.1);
  display: flex;
  flex-direction: row;
  justify-content:center;
  margin:20px;


}
.course-left{
  width: 50%;
}
.course-left image{
  width:90%;
  height:100px;
  margin-left:-10px;
  margin-top:20px;

}
.course-right{
  width:50%;
  margin-top: 20px;
  font-size:16px;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(72,103,104,1);
  line-height:25px;
  margin-right:10px;
  height: 100px;
}
.course-title{
  height: 30px;
}
.course-intro{
  font-size:14px;
  padding-left: 10px;
  height: 50px;
  overflow:hidden;
    text-overflow:ellipsis;
    /*white-space:nowrap;*/   
    display:-webkit-box; 
    word-break: break-all;
    -webkit-box-orient:vertical; 
    -webkit-line-clamp:3; 
}
.course-price{
  margin: 35px 20px 0 0;
  text-align: right;

}
/*无数据*/
.no-data {
  width: 100%;
  margin-top:40%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.icon-no-record, .icon-notfound {
  color: #466466;
  font-size: 70px;
  line-height: 90px;
}

.no-data-text {
  color: #466466;
  font-size: 16px;
  line-height: 20px;
}
.loading{  
  padding: 10rpx;  
  text-align: center;  
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;  
  background-size: contain;  
  animation: rotate 1s linear infinite;  
}  
.loading.complete:before{  
  display: none;  
}