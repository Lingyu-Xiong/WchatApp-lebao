.detail-content{
  background-color:#fff;
  margin-top:10px;
}
.detail-list{
  border-bottom:1px #eeeeee solid;
  width:100%;
  height:40px;
  line-height:40px;
  padding:5px;
  display:flex;
  flex-direction: row
}
.detail-list text{
  font-size:16px;
  width:30%;
  text-align: center;
}
.detail-list-right{
  width:70%
}
.detail-list-right input{
  height:40px;
}
.input-placeholder{
  font-size:14px;
}
.picker{
   font-size:16px;
   height:40px;
}
.radio{
  font-size:16px;
}
.add-confirm{
  width:80%;
  height:40px;
  line-height: 40px;
  background-color:#25aab1;
  color:#fff;
  margin:10px 10% 0 10%;
  text-align: center;
  border-radius: 4px;
}