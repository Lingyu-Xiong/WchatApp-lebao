@import'../video.wxss';
.func-detail{
  flex-basis: 50%;
  height:32px;
  line-height: 32px;
  color:rgb(131, 131, 131);
}
.func-detail-active{
color:#444;
}
.func-detail text{
  margin-left:5px;
}
.video-bottom-detail{
  border-bottom: 0.5px #eee solid;
}
.under-line {
  background-color: #25aab1;
  width: 20%;
  height: 3px;
  border-radius: 100px;
  margin-left:40%;
}
.comment-single{
  padding:10px;
  display:flex;
  flex-direction: row;
}
.img-box{
  border-radius: 50%;
  overflow: hidden;
  flex-basis:40px;
  height:40px;
  flex-shrink: 0;
}
.comment-single-avator{
  width:100%;
  height:100%;
}
.comment-single-script{
  padding:0 10px 10px 10px;
  border-bottom: 0.5px #eee solid;
  flex-basis: 100%;
}
.single-username{
  font-size: 14px;
  color:rgb(131, 131, 131);
}
.single-desc{
  font-size:16px;
  color:#222;
  line-height: 22px;
  margin-top:6px;
}
.dianzan-script{
  height:30px;
  padding:10px;
}
.com-input-box{
  background-color: #fcfcfc;
  width:100%;
  height:45px;
  position:fixed;
  bottom:0;
  border-top:0.5px #eee solid;
}
.com-input{
  width:100%;
  padding:6px 0;
  display:flex;
  flex-direction: row;
  font-size: 16px;
}
.func-input{
  flex-basis: 50%;
  height:32px;
  line-height:32px;
}
.func-input-left{
  border-right:0.5px #eee solid;
}
/* 评论框 */
.model {
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 100;
}

.input-box {
  position: absolute;
  background-color: #f8f8f8;
  padding: 10px;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 101;
  display:flex;
  flex-direction: row;
  height:90px;
}

.textarea {
  background-color: #fff;
  flex-basis: 80%;
  flex-shrink: 0;
  padding: 5px;
  height: 60px;
  font-size: 16px;
  position: static;
  border:0.5px #eee solid;
  border-radius: 5px;
}

.send {
  font-size: 16px;
  margin-top: 10px;
  margin-left:10px;
  color: rgb(131, 131, 131);
  float: right;
  position: static;
  flex-basis: 20%;
  text-align: center;
}
.send-valid{
color: #25aab1;
}
.invisible_model{
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  bottom: 0;
}
.blank{
  width:100%;
  height:50px;
}