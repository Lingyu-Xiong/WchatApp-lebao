/* pages/questionBank/learnMore/learnMore.wxss */
@import "../challenge/challenge.wxss";
page{
  height:100%;
  background-color: #fff;
}
.content{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.header{
  line-height: 100rpx;
  flex: 0 0 60px; /* 不放大不缩小固定100rpx */
}
.scroll{
  width:100%;
  height:60px;
  position:fixed;
  white-space: nowrap; 
  display: flex;
  top:0;
  border-top: 2px solid #F5F5F5;
}
.item-card{
  margin-left: 20px;
  margin-right: 20px;
  display: inline-block;
  font-size:15px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#8A8A8A;
  line-height:21px;
}
.active {
  background-color: #fff;
  color: #21354F;
  border-style: none none solid none;
  border-width: 2px;
  border-color: #3EBFB7;
}
.line{
  width:100%;
  height:10px;
  background:rgba(246,246,246,1); 
  position:fixed;
  top:50px;
}
.nodata {
  width: 100%;
  height: 200px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.nodata-i5 {
  height: 150px;
}

.nodata-text {
  color: #466466;
  font-size: 14px;
  line-height: 18px;
}
.analysis-title1{
  padding:10px 0 0 10px;

}
.analysis-detail{
  padding: 10px;
  font-size: 14px;
  word-break:break-all;
}
.loading{  
  padding: 10rpx;  
  text-align: center;  
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;  
  background-size: contain;  
  animation: rotate 1s linear infinite;  
}  
.loading.complete:before{  
  display: none;  
}