/* pages/school/school.wxss 
@import "../../template/menu/menu.wxss";*/
page{
  height:100%;
  background-color: #fff;
}
.content{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.header{
  line-height: 100rpx;
  flex: 0 0 85px; /* 不放大不缩小固定100rpx */
}
/* 查询 */
.courseselect {
  position:fixed;
  color: 8A8A8A;
  top:0;
  width: 100%;
  height: 35px;
  display:flex;
}
.mask{
  position:fixed;
  top:76px;
  left: 0;
  right: 0;
  bottom: 0;
  background: #8A8A8A;
  opacity: 0.8;
}
.category-List{
  /*width: 80px;*/
  position:fixed;
  top:76px;
  background: #FFF;
  height:auto;
  max-height:300px;


}
.category-single{
  height:20px;
  color:#8A8A8A;
  padding:5px 30px;
  text-align:left;
  font-size:16px;


}
.touch{
  color:#25aab1 ;
}
.select-time {
  width: 30%;
  height: 100%;
  font-size: 13px;
  float: left;
  margin-left: 5%;
}


.course-select {
  width: 100%;
  height: 30px;
  color: #466466;
  font-size: 10px;
  line-height: 24px;
  border: 0.5px #e9e9e9 solid;
  border-radius: 10rpx;
  margin: 0 3%;
  display:flex;
  flex-wrap: nowrap

}

.icon-search {
  margin:0 5px;
  height:30px;
  line-height: 30px;
  color: #466466;
  font-size: 18px;
  flex-basis: 20px;
}

.course-select .selinput {
  width: calc(100% - 55px);
  font-size:14px;
  height:30px;
  line-height: 30px;
}

.icon-close {
  flex-basis: 15px;
  font-size: 15px;
  color: #466466;
  height:30px;
  line-height: 30px;
  margin:0 5px;
}

.place-holder {
  color: #e6e6e6;
  font-size: 14px;
  line-height: 24px;
}

.select-btn {
  width: 56px;
  height: 100%;
  background-color: #25aab1;
  text-align: center;
  letter-spacing: 2px;
  color: #fff;
  line-height: 24px;
  margin-right: 16px;
  margin-top: 1px;
  float: right;
  font-size: 12px;
}
/* 查询end */
.nav{
  width:100%;
  height:40px;
  white-space: nowrap; 
  display: flex;
  justify-content: space-around;
  position:fixed;
  top:30px;
}
.search{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.search-img1 image{
  width: 14px;
  height: 14px;
}
.search-title{
  height:21px;
  font-size:16px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#8A8A8A;
  line-height:21px;
  padding-left:5px;
}
.select{
  color: #25aab1;

}
.search-img2{
  width: 5px;
  padding-left: 8px;
}
.search-img2 image{
  position: relative;
  width: 5px;
  height: 5px;
  bottom:0px;
  right:0px;
}
.main{
  flex: 1;
  position: relative;
}
.scroll{
  width:100%;
  height:40px;
  white-space: nowrap; 
  display: flex;
  position:fixed;
  top:30px;
}
.item-card{
  margin-left: 20px;
  margin-right: 20px;
  display: inline-block;
  font-size:15px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#8A8A8A;
  line-height:21px;
}
.active {
  background-color: #fff;
  color: #21354F;
  border-style: none none solid none;
  border-width: 2px;
  border-color: #3EBFB7;
}
/* 课程*/
.main{
  flex: 1;
  position: relative;
}
.main-scroll{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.line {
  width:100%;
  height:1px;
  background:#e9e9e9;
  position:fixed;
  top:75px;
  opacity:0.5;

}

.school-list{
  flex:1;
  position:relative;
  overflow:auto;

}
.school-single{
  border-bottom:2px solid #F5F5F5;
  display: flex;
  height: 25%;
  padding:0 5px;

}
.school-left{
padding:10px 0px;

}
.school-left image{
 width: 140px;
 height: 80px;
}
.school-right{
padding:10px 0px 10px 5px;

}
.school-name{
  margin-bottom:8px;
  font-size:18px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#0F2E48;
  line-height:22px;
  overflow:hidden;
  text-overflow:ellipsis;
  /*white-space:nowrap;*/   
  display:-webkit-box; 
  word-break: break-all;
  -webkit-box-orient:vertical; 
  -webkit-line-clamp:1;
}
.school-other{
  font-size:14px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#8A8A8A;
  line-height:25px;
  overflow:hidden;
  text-overflow:ellipsis;
  /*white-space:nowrap;*/   
  display:-webkit-box; 
  word-break: break-all;
  -webkit-box-orient:vertical; 
  -webkit-line-clamp:1;
}
.school-other p{
  color: #25aab1;
}
.school-other-label{
  display:flex;
}
.group-label{
  margin-left:15px;
  width:60px;
  height:24px;
}
/*无数据*/
.no-data {
  width: 100%;
  margin-top:40%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.icon-no-record, .icon-notfound {
  color: #466466;
  font-size: 70px;
  line-height: 90px;
}

.no-data-text {
  color: #466466;
  font-size: 16px;
  line-height: 20px;
}
.loading{  
  padding: 10rpx;  
  text-align: center;  
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;  
  background-size: contain;  
  animation: rotate 1s linear infinite;  
}  
.loading.complete:before{  
  display: none;  
}
