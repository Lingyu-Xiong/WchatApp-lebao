/* pages/school/details/details.wxss */

page {
  background-color: #fff;
}

.content {
  width: 100%;
}

.banner {
  display: inline-block;
  text-align: center;
  border-style: solid none solid none;
  border-width: 0.5px;
  border-color: #e9e9e9;
}
.swiper-media{
  height:200px
}
.video-box{
  width:100%;
  height:200px
}
.video{
  width:100%;
  height:200px;
}

.banner-pic{
  width:100%;
  height:200px;
}
.body-pic {
  width: 100%;
  height: 200px;
  /* margin-left: 10%;
  margin-top: 12px; */
}

.body-pic-i5 {
  width: 64%;
  height: 120px;
  margin-left: 18%;
}

.bodycontent {
  width: 100%;
}

.body-content {
  width: 80%;
  margin-left: 10%;
  margin-top: 10px;
}

.text {
  width: 100%;
  color: #466466;
  font-size: 13px;
  line-height: 18px;
  text-align: left;
}

.body-ask {
  width: 80px;
  height:33px;
  line-height: 33px;
  border-radius: 6px;
  border: none;
  background-color: rgba(37, 170, 177, 0.8);
  color: #fff;
  font-size: 13px;
  padding: 0;
  position: absolute;
  top: 220px;
  right: 8%;
}
.iconfont{
  font-size:13px;
}

.body-ask-i5 {
  top: 162px;
}

.icon-address {
  font-size: 12px;
  line-height: 18px;
  color: #25aab1;
  position: relative;
  margin-top: -10px;
}
.icon-address0{
  font-size: 18px;
  line-height: 18px;
  color: #25aab1;
  position: relative;
  margin-top: -10px;
}

.blank {
  width: 100%;
  height: 16px;
}

.swiper-tab {
  width: calc((100% - 2px) / 3);
  height: 39.5px;
  float: left;
  text-align: center;
  color: #466466;
  background-color: #fff;
  letter-spacing: 5px;
  border-style: none solid none none;
  border-color: #e9e9e9;
  border-width: 0.5px;
  line-height: 40px;
  font-size: 16px;
}

.swiper-tab:first-child {
  border-top-left-radius: 10px;
}

.swiper-tab:last-child {
  border-top-right-radius: 10px;
  border: none;
}

.active {
  color: #25aab1;
}

.under-line {
  background-color: #25aab1;
  width: 100%;
  height: 3px;
  margin-top: -3px;
}

.div {
  width: calc(100% - 20px);
  height: 90px;
  margin-left: 10px;
}
.div.desc.auto{
  height:auto;
}
.div-img {
  width: 30.8%;
  height: 75%;
  margin-top: 2%;
  float: left;
}

.details {
  width: calc(69.2% - 118px);
  height: 100%;
  float: left;
  color: #466466;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
  padding-left: 8px;
  font-size: 16px;
}

.details-i5 {
  width: calc(71.2% - 103px);
  font-size: 13px;
}
.teacher-img{
   width: 30.8%;
    height: 90%;
}
.teacher-details {
  width: calc(69.2% - 8px);
}

.details-title {
  font-size: 14px;
  line-height: 18px;
}

.details-desc {
  font-size: 10px;
  line-height: 14px;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.price {
  width: 110px;
  height: 100%;
  float: right;
  color: #25aab1;
  font-size: 21px;
  text-align: right;
}

.price-i5 {
  width: 95px;
  font-size: 17px;
}

.retailPrice {
  margin-top: 20px;
}

.retailPrice text {
  font-size: 13px;
}

.counterPrice {
  line-height: 30px;
  font-size: 10px;
  color: #466466;
  text-decoration: line-through;
}

.price .text {
  font-size: 9px;
  color: #25aab1;
}

.counterPrice .text {
  font-size: 9px;
  color: #466466;
}

.counterPrice text {
  font-size: 9px;
}

.nodata {
  width: 100%;
  height: 200px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.nodata-i5 {
  height: 150px;
}

.icon-nocourse, .icon-noteacher, .icon-notfound {
  font-size: 30px;
  color: #466466;
}

.nodata-text {
  color: #466466;
  font-size: 14px;
  line-height: 18px;
}

.desc {
  color: #466466;
  font-size: 15px;
  line-height: 24px;
  text-indent: 20rpx;
  text-align: left;
  padding: 20px 0;
}

.coversrc{
  position: relative;
  width: 100%;
  height: 100%;
  margin-top:-200px;
}
.img{
  width: 100%;
  opacity: 0.8;
  height:200px;
  margin-top:-5px;
}
.playbtn image{
  position: absolute;
  top:50%;
  left:50%;
  background: transparent;
  width: 2rem;
  height:2.33rem;
  margin-top:-2rem;
  margin-left: -1rem;
}

.group-label{
   width:60px;
  height:24px;
}