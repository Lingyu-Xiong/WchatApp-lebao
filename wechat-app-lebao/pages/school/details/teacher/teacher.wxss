/* pages/school/details/teacher/teacher.wxss */
@import '../details.wxss';
page{
  background-color: #ffffff;
}
.content{
  margin: 0;
  border-radius: 0;
}
.course-name {
  font-size: 22px;
  font-weight: bold;
  color: #466466;
  margin-top: 8px;
}

.icon-phone {
  font-size: 15px;
  line-height: 18px;
  color: #25aab1;
  position: relative;
  margin-top: -10px;
}

.div text {
  display: block;
  font-size: 12px;
  line-height: 16px;
}

.div-icon {
  color: #466466;
  font-size: 18px;
  line-height: 20px;
}

.course-desc {
  font-size: 16px;
  color: #466466;
  line-height: 20px;
  padding-bottom: 8px;
}

.teacher-pic {
  width: 80%;
  height: 150px;
  margin-top: 12px;
  margin-left: 10%;
  border: 0.5px #e9e9e9 solid;
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.teacher-pic-i5 {
  height: 120px;
}

.teacher-pic image {
  width: 25%;
  height: 60%;
}
.desc{
  padding: 10px 0;
}
.nodata{
  height: 90px;
}
.nodata-text{
  margin-top: 5px;
}
.div1 {
  width: calc(100% - 32px);
  margin-left: 16px;
}