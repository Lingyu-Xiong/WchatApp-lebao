/* pages/school/details/course/course.wxss */
@import '../details.wxss';

page {
  background-color: #fff;
}

.course-content {
  width: 100%;
  padding-top: 10px;
}

.left {
  width: 50px;
  height: 70px;
  float: left;
}

.right {
  width: 100%;
  height: 70px;
  float: right;
}

.ask {
  width: 44px;
  height: 22px;
  border-radius: 10px;
  border: 1px #25aab1 solid;
  background-color: #fff;
  color: #25aab1;
  font-size: 12px;
  line-height: 22px;
  padding: 0;
  margin-top: 12px;
}
.c-body-content{
padding:15px;
}
.c-body-content-top{
padding:15px 15px 0 15px;
}
.course-name {
  font-size: 22px;
  font-weight: bold;
  color: #466466;
  margin:5px 0;
}
.course-price{
  display:flex;
  margin:5px 0;
}
.originalPrice {
  color: #c5c5c5;
  font-size: 18px;
  padding-right: 8px;
  text-decoration: line-through;
}

.discountPrice {
  color: #25aab1;
  font-size: 18px;
  margin-right: 8px;
}

.div{
  height:auto;
}
.div text {
  display: block;
  font-size: 12px;
  line-height: 16px;
}

.icon-course-desc {
  color: #466466;
  font-size: 18px;
  line-height: 20px;
}

.course-desc {
  font-size: 16px;
  color: #466466;
  line-height: 20px;
  padding-bottom: 8px;
}

.sign-up-blank {
  background-color: transparent;
  width: 100%;
  height: 68px;
}

.sign-up {
  width: 100%;
  height: 48px;
  border-style: solid none none none;
  border-width: 0.5px;
  border-color: #e9e9e9;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
}

.sign-up .left {
  width: calc(100% - 82px);
  height: 100%;
}

.sign-up .right {
  width: 82px;
  height: 100%;
  line-height: 48px;
  font-size: 16px;
  font-weight: bold;
  letter-spacing: 8px;
  color: #fff;
  text-align: center;
  background-color: #25aab1;
}

.total {
  color: #466466;
  font-size: 12px;
  padding-left: 12px;
  margin-top: 4px;
}

.total text {
  color: #25aab1;
  font-size: 20px;
}

.personNum {
  color: #466466;
  font-size: 10px;
  padding-left: 12px;
}
/* 拼团 */
.group-buy{
  padding:5px 10px;
  border-top:4px #eee solid;
  border-bottom: 4px #eee solid;
  height:160px;
}
.group-head{
  border-bottom: 1px #eee solid;
  width:100%;
  height:30px;
  line-height: 30px;
  display:flex;
  justify-content: space-between;
  color:#466466;
  font-size:14px;
  padding-bottom: 5px;
}
.head-left{

}
.head-right{

}
.group-single{
  padding:10px 0;
  display:flex;
  width:100%;
  align-items: center;
  justify-content: space-between;
  border-bottom:1px #eee solid;
}
.avatar-box{
  border-radius: 50%;
  overflow: hidden;
  width:40px;
  height:40px;
}
.user-avatar{
   width:100%;
  height:100%;
}
.user-name{
  font-size:16px;
  color:#25aab1;
  flex-basis:45%;
}
.group-info{
  flex-basis: 35%;
}
.info-1{
  font-size:16px;
  color:#466466;
  margin-bottom: 5px;
}
.info-2{
  font-size:14px;
  color:#c5c5c5;
}
.join-btn{
  flex-basis: 20%;
  height:6vw;
  background-color:#FB4E4E;
  border-radius: 20px;
  font-size:14px;
  line-height: 6vw;
  color:#fff;
  text-align: center;
}
/* 开团按钮 */
.gb-sign-up{
    width: 100%;
  height: 48px;
  border-style: solid none none none;
  border-width: 0.5px;
  border-color: #e9e9e9;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  display:flex;
}
.gb-sign-up .gb-left {
  width: calc(100% - 240px);
  height: 100%;
}
.gb-sign-up .gb-mid{
  width:120px;
   height: 100%;
  line-height: 48px;
  font-size: 16px;
  color: #fff;
  text-align: center;
  background-color: #25aab1;
}
.gb-sign-up .gb-right {
  width: 120px;
  height: 100%;
  line-height: 48px;
  font-size: 16px;
  color: #fff;
  text-align: center;
  background-color: #FB4E4E;
}
.nogroup{
  text-align: center;
  margin:15px;
  font-size:16px;
  color:#466466;
}