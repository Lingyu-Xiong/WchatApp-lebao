/* pages/my/expert/expert.wxss */
page{
  height:100%;
  background-color: #fff;
}
.select {
  margin: 12px;
  width: 90%;
  height: 25px;
  padding-bottom: 10px;
}

.select-time {
  width: 30%;
  height: 100%;
  font-size: 13px;
  float: left;
  margin-left: 5%;
}


.expert-select {
  width: 90%;
  height: 30px;
  color: #466466;
  font-size: 10px;
  padding: 0 12px;
  line-height: 24px;
  float: left;
  border: 0.5px #e9e9e9 solid;
  border-radius: 10rpx;
  margin: 0 3%;
  min-height: 25px;
}

.icon-search {
  padding-left: 5px;
  padding-right: 10px;
  line-height: 30px;
  color: #466466;
  font-size: 18px;
  float: left;
}

.expert-select .selinput {
  /*width: calc(100% - 40rpx);*/
  width:80%;
  margin-top:1%;
  float: left;
  font-size:14px;

}

.icon-close {
  width: 30rpx;
  font-size: 30rpx;
  color: #466466;
  text-align: center;
  float: right;
  line-height: 24px;
  margin-top: -10rpx;
}
.expert-content {
  font-size:16px;
  height:100%;
  
}
.expert-single{
  height: 40vw;
  display: flex;
  flex-direction: row;
  align-content: center;
  /*border-bottom:0.02rem #eeeeee solid;*/
  border-top:1.05px #a7a6a6 solid;
  padding: 10px 0;
}
.expert-item-pic{
  margin: 0 10px;
  width: 30vw;
  height: 40vw;
  /*background: rgb(101, 160, 187)*/
}
.text-content{
  width: 60%;
  margin-top: 10px;
  font-size: 16px;
  color: #a7a6a6;
  position: relative;
}
.expert-name{
  font-size: 22px;
  color: #000
}
.expert-filed{
  margin-top: 5px;
}
.expert-introduction{
   margin-top: 5px;
    overflow:hidden;
    text-overflow:ellipsis;
    /*white-space:nowrap;*/   
    display:-webkit-box; 
    word-break: break-all;
    -webkit-box-orient:vertical; 
    -webkit-line-clamp:2; 
}
.expert-follow{
  position: absolute;
  font-size: 14px;
  right: 0px;
  bottom: 0px; 
}
.nodata {
  width: 100%;
  height: 200px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.nodata-i5 {
  height: 150px;
}

.icon-expert {
  font-size: 30px;
  color: #466466;
}

.nodata-text {
  color: #466466;
  font-size: 14px;
  line-height: 18px;
}
