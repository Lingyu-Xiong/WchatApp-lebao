
.modals {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.modals-cancel {
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.bottom-dialog-body {
  position: absolute;
  z-index: 10001;
  bottom: 0px;
  left: 0px;
  right: 0px;
  height: 900rpx;
  width: 100%;
  border-radius: 10px;
  background-color: #fff;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/*动画前初始位置 !important,千万不要忘记*/

.bottom-pos {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}

.close {
  width: 100%;
  height: 80rpx;
  text-align: right;
}

.icon-close {
  font-size: 34px;
  line-height: 80rpx;
  color: #466466;
}

.orderSn {
  color: #466466;
  font-size: 14px;
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}

.money {
  width: 100%;
  height: 120rpx;
  font-size: 28px;
  color: #466466;
  font-weight: bold;
  line-height: 120rpx;
  text-align: center;
}

.input {
  width: 90%;
  height: 80rpx;
  border: 0.5px #e9e9e9 solid;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-left: 3%;
  margin-top: 30rpx;
  color: #466466;
  line-height: 80rpx;
  font-size: 28px;
  text-align: center;
}
.input-box {
  width: calc((100% - 12rpx) / 6);
  height: 100%;
  border-style: none solid none none;
  border-width: 1rpx;
  border-color: #e9e9e9;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input-box:last-child {
  border: none;
}

.dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #466466;
}

.keyboard {
  width: 100%;
  height: 460rpx;
  display: flex;
  flex-wrap: wrap;
  border: 0.5px #e9e9e9 solid;
  background: #f8f8f8;
  color: #466466;
  font-weight: bold;
  line-height: 115rpx;
  text-align: center;
  margin-top: 30rpx;
}

.key {
  width: calc((100% - 6px) / 3);
  height: 115rpx;
  border: 0.5px #e9e9e9 solid;
}

.icon-delete {
  color: #466466;
  font-weight: bold;
  line-height: 115rpx;
  text-align: center;
  font-size: 25px;
}

